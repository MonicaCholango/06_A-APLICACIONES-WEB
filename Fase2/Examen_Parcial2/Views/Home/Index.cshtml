@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <div class="jumbotron bg-light p-5 rounded mb-4">
        <h1 class="display-4">Sistema de Gestión de Eventos</h1>
        <p class="lead">Bienvenido a la plataforma de gestión de eventos, donde puedes organizar y administrar eventos, participantes, lugares y patrocinadores.</p>
        <hr class="my-4">
        <p>Utiliza las opciones de navegación para acceder a las diferentes secciones del sistema.</p>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" asp-controller="Eventos" asp-action="Index" role="button">Ver Eventos</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login" role="button">Iniciar Sesión</a>
            <a class="btn btn-outline-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Registrarse</a>
        }
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Próximos Eventos</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProximosEventos != null && ViewBag.ProximosEventos.Count > 0)
                    {
                        <div class="list-group">
                            @foreach (var evento in ViewBag.ProximosEventos)
                            {
                                <a href="#" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@evento.Nombre</h5>
                                        <small>@evento.Fecha.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <p class="mb-1">@evento.Descripcion</p>
                                    <small>Lugar: @evento.Lugar.Nombre</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay eventos próximos programados.</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Eventos" asp-action="Index" class="btn btn-primary">Ver todos los eventos</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h3 class="text-primary">@ViewBag.TotalEventos</h3>
                                <p class="mb-0">Eventos</p>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h3 class="text-success">@ViewBag.TotalParticipantes</h3>
                                <p class="mb-0">Participantes</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded bg-light">
                                <h3 class="text-info">@ViewBag.TotalLugares</h3>
                                <p class="mb-0">Lugares</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded bg-light">
                                <h3 class="text-warning">@ViewBag.TotalPatrocinadores</h3>
                                <p class="mb-0">Patrocinadores</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Funcionalidades del Sistema</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <div class="p-3">
                                <i class="bi bi-calendar-event text-primary" style="font-size: 2.5rem;"></i>
                                <h5 class="mt-2">Gestión de Eventos</h5>
                                <p class="text-muted">Administra todos los eventos de tu organización.</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <div class="p-3">
                                <i class="bi bi-people text-success" style="font-size: 2.5rem;"></i>
                                <h5 class="mt-2">Gestión de Participantes</h5>
                                <p class="text-muted">Controla los participantes de cada evento.</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <div class="p-3">
                                <i class="bi bi-geo-alt text-info" style="font-size: 2.5rem;"></i>
                                <h5 class="mt-2">Gestión de Lugares</h5>
                                <p class="text-muted">Administra los lugares donde se realizarán los eventos.</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <div class="p-3">
                                <i class="bi bi-briefcase text-warning" style="font-size: 2.5rem;"></i>
                                <h5 class="mt-2">Gestión de Patrocinadores</h5>
                                <p class="text-muted">Gestiona los patrocinadores de tus eventos.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>