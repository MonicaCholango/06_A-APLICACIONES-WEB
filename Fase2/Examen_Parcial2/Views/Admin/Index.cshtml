@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container">
    <h1 class="mb-4">Panel de Administración</h1>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-calendar-event"></i> Eventos</h5>
                    <p class="card-text">Total: @ViewBag.TotalEventos</p>
                    <a asp-controller="Eventos" asp-action="Index" class="btn btn-light">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Participantes</h5>
                    <p class="card-text">Total: @ViewBag.TotalParticipantes</p>
                    <a asp-controller="Participantes" asp-action="Index" class="btn btn-light">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-geo-alt"></i> Lugares</h5>
                    <p class="card-text">Total: @ViewBag.TotalLugares</p>
                    <a asp-controller="Lugares" asp-action="Index" class="btn btn-light">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-briefcase"></i> Patrocinadores</h5>
                    <p class="card-text">Total: @ViewBag.TotalPatrocinadores</p>
                    <a asp-controller="Patrocinadores" asp-action="Index" class="btn btn-light">Gestionar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Próximos Eventos</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProximosEventos != null && ViewBag.ProximosEventos.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var evento in ViewBag.ProximosEventos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@evento.Nombre</strong>
                                        <small class="d-block text-muted">@evento.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <a asp-controller="Eventos" asp-action="Details" asp-route-id="@evento.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay eventos próximos.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Participantes Recientes</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ParticipantesRecientes != null && ViewBag.ParticipantesRecientes.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var participante in ViewBag.ParticipantesRecientes)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@participante.Nombre</strong>
                                        <small class="d-block">@participante.Email</small>
                                    </div>
                                    <a asp-controller="Participantes" asp-action="Details" asp-route-id="@participante.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay participantes recientes.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Eventos" asp-action="Create" class="btn btn-primary d-block">
                                <i class="bi bi-plus-circle"></i> Nuevo Evento
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Participantes" asp-action="Create" class="btn btn-success d-block">
                                <i class="bi bi-plus-circle"></i> Nuevo Participante
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Lugares" asp-action="Create" class="btn btn-info d-block">
                                <i class="bi bi-plus-circle"></i> Nuevo Lugar
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Patrocinadores" asp-action="Create" class="btn btn-warning d-block">
                                <i class="bi bi-plus-circle"></i> Nuevo Patrocinador
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>