@model IEnumerable<ExamenParcial.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container">
    <h1>Clientes</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Cliente</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Email</td>
                        <td>@item.Telefono</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ClienteId">Detalles</a> |
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a> |
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>