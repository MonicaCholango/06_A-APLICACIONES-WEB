@model ExamenParcial.Models.Producto

<h2>Eliminar Producto</h2>

<div>
    <h3>¿Estás seguro que deseas eliminar el producto @Model.Nombre?</h3>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.ProductoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
